<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/widget_background"
    android:padding="20dp"
    android:clickable="true">

    <!-- 상단: 랭킹 + 이모지 -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rank_badge_background"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="4위"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="✨"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 별자리 이름 -->
    <TextView
        android:id="@+id/widget_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_section"
        android:layout_marginTop="16dp"
        android:letterSpacing="-0.02"
        android:text="처녀자리"
        android:textColor="#4A148C"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 해시태그 컨테이너 -->
    <LinearLayout
        android:id="@+id/hashtag_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_sign"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_lucky_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hashtag_background"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="아이템 #볼펜"
            android:textColor="#6A1B9A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_lucky_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/hashtag_background"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="컬러 #네이비"
            android:textColor="#6A1B9A"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 하단 바 -->
    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="12월 09일"
            android:textColor="#9575CD"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/widget_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="전체 운세 보기 ›"
            android:textColor="#9575CD"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>
